
public class GestionPaises {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int num =0;
		int opcion=0;
		String nombre="";
		paises[] lista =null;
		
		opcion=Metodos.pedirentero("1-crear lista\n2-añadir pais\n3-borar pais\n4-vaciar lista\n5-mostrar lista");
		
		while (opcion!=0){

		
		switch (opcion) {
		case 1:
			num=Metodos.pedirentero("vamos a crear una lista de paises\ndime cuantos paises quieres crear? ");
			lista =  new paises[num];
			System.out.println("lista creada");
			
			
			
			break;
		case 2:

			for (int i = 0; i < paises.(); i++) {
				nombre=Metodos.pedirnombre("escriba el nombre del #" + (i+1) + "pais");
				lista[i]= new paises(nombre);
				
			}	
			break;

		default:
			break;
		}
		
		
	
		for (int i = 0; i < lista.length; i++) {
			System.out.println( "pais numero #"+ (i+1) +lista[i]);
		}
		opcion=Metodos.pedirentero("1-crear lista\n2-añadir pais\n3-borar pais\n4-vaciar lista\n5-mostrar lista");
		}
		
		
		
	}

}
