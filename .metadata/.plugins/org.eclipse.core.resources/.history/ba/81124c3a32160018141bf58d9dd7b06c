import java.lang.invoke.SwitchPoint;

public class GestionIndicador {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Integer valorinicial=0;
		Integer opcion=0;
		 Indicador deposito ;
		 
		 deposito = new Indicador();
		 
		 
		 
		
		
		do {Metodos.pedirentero("¿ de que sustancia quieres crear el indicador\n1-Diesel \n2-Gasolina \n3-Cianuro \n4-Estiercol \n5-Mierda");
 
		}while (opcion !=0);
		
		
		switch (opcion) {
		case 1:
			valorinicial=Metodos.pedirentero("cuantos litros quieres de inicio");
			deposito.setValorinicial(valorinicial);
			break;
		case 2:
			System.out.println("cuantos litros quieres de inicio");
			break;
		case 3:
			System.out.println("cuantos litros quieres de inicio");
			break;

		case 4:
			System.out.println("cuantos kilos quieres de inicio");
			break;
		case 5:
			System.out.println("cuantos kilos quieres de inicio");
			break;

		default:
			break;
			
			
			
			
		}
	}
	
	

}
