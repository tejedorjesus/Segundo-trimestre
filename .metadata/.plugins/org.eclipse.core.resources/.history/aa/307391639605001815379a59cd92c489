import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.Scanner;

public class GestionPaises {//class

	public static void main(String[] args) {// main
		// TODO Auto-generated method stub
		
		int  numeroPaises=0;
		String nombrePais;
		int opcion=0;
		Scanner sc = new Scanner(System.in);
	
		listaDePaises paises = null;

		listaDePaises pais = null;
		
		System.out.println("1- Crear lista\n" + "2- Añadir nombre\n" + "3- Borrar un nombre\n"
				+ "4- Listar todos los nombres\n" + "5- Borrar todos los nombres\n" + "6- Salir.");
		opcion=sc.nextInt();
		while(opcion!=0){
		switch (opcion=0) {
		case 1:
			nombrePais = pedirString("Introduce un nombre");
			
			break;

		default:
			break;
		}
		}//end while




	}// end main
	static public String pedirString(final String mensaje) {
		BufferedReader dataIn = new BufferedReader(new InputStreamReader(System.in));
		String cadena = "";
		boolean error = true;
		while (error) {
			try {
				cadena = "";
				System.out.println(mensaje);
				cadena = dataIn.readLine();
				error = false;
			} catch (IOException e) {
				System.out.println("Vuelve a introducir el dato, por favor: ");
				error = true;
			}
		}
		return cadena;
	} // Pedir String

}
